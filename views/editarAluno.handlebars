<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brilho do Arco-Íris</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" href="./img/icon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="./img/icon.ico" type="image/x-icon">
</head>

<body class="flex flex-col h-screen">
    <div class="flex-grow bg-blue-100">
        <header>
            <nav class="bg-white outline outline-offset-2 outline-orange-400">
                <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
                    <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
                        <img src="./img/logotipoPrincipal.png" class="h-28" alt="Logo Brilho do Arco-Íris" />
                    </a>
                </div>
            </nav>
        </header>
        <main>
            <div class="flex justify-center py-24">
                <div class="block max-w-3xl p-6 bg-white border border-gray-200 rounded-lg shadow">
                    <h5 class="mb-2 text-4xl font-bold tracking-tight text-indigo-900 text-center px-12 pb-5">Editar
                        Aluno</h5>
                    <form action="/atualizarAluno" method="POST" class="max-w-sm mx-auto" autocomplete="off">
                        <div class="grid grid-cols-1 gap-4">
                            <div>
                                <div>
                                    <fieldset>
                                        <input type="hidden" name="id" class="form-control" id="id" value="{{id}}">
                                        <label for="registro" class="block text-sm font-medium text-gray-900">Registro
                                            do Aluno</label>
                                        <input type="text" id="registro" placeholder="0000-00" name="registro"
                                            class="bg-gray-100 border-2 border-indigo-900 text-gray-700 placeholder-gray-500 text-base focus:ring-indigo-800 focus:border-indigo-800 block w-full p-2.5"
                                            value="{{alunos.registro}}" required maxlength="7" pattern="\d{4}-\d{2}" />
                                    </fieldset>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <fieldset>
                                        <label for="nome" class="block text-sm font-medium text-gray-900">Nome</label>
                                        <input type="text" id="nome" placeholder="Nome do aluno" name="nome"
                                            class="bg-gray-100 border-2 border-indigo-900 text-gray-700 placeholder-gray-500 text-base focus:ring-indigo-800 focus:border-indigo-800 block w-full p-2.5"
                                            value="{{alunos.nome}}" required autocomplete="off"
                                            oninput="this.value = this.value.replace(/(\b[a-z](?!\s))/g, function(x){return x.toUpperCase();});"
                                            pattern="[A-Za-zÀ-ú]+\s[A-Za-zÀ-ú]+.*"
                                            title="Por favor, informe o nome e sobrenome." />
                                    </fieldset>

                                </div>
                            </div>
                            <div>
                                <div>
                                    <fieldset>
                                        <label for="dataNasc" class="block text-sm font-medium text-gray-900">Data de
                                            Nascimento</label>
                                        <input type="date" id="dataNasc" placeholder="dd/mm/aaaa" name="dataNasc"
                                            class="bg-gray-100 border-2 border-indigo-900 text-gray-700 placeholder-gray-500 text-base focus:ring-indigo-800 focus:border-indigo-800 block w-full p-2.5"
                                            value="{{alunos.dataNasc}}" required />
                                    </fieldset>
                                </div>
                            </div>
                            <div>
                                <div>
                                    <fieldset>
                                        <label for="turma" class="block text-sm font-medium text-gray-900">Turma</label>
                                        <select id="turma" name="turma" required
                                            class="bg-gray-100 border-2 border-indigo-900 text-gray-700 placeholder-gray-500 text-base focus:ring-indigo-800 focus:border-indigo-800 block w-full p-2.5">
                                            <option disabled selected>Selecione...</option>
                                            <option value="1º Ano A">1º Ano A</option>
                                            <option value="1º Ano B">1º Ano B</option>
                                            <option value="2º Ano A">2º Ano A</option>
                                            <option value="2º Ano B">2º Ano B</option>
                                            <option value="3º Ano A">3º Ano A</option>
                                            <option value="3º Ano B">3º Ano B</option>
                                        </select>
                                    </fieldset>
                                </div>
                            </div>
                            <div class="mb-5 text-center items-center">
                                <button type="submit" id="form-submit"
                                    class="inline-flex items-center px-12 py-2 text-base font-medium text-center text-white bg-indigo-700 rounded-sm hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300 mt-8">
                                    Atualizar
                                </button>
                                <a href="/consultarAlunos">
                                    <div
                                        class="inline-flex items-center px-16 py-2 text-base font-medium text-center text-white bg-indigo-700 rounded-sm hover:bg-indigo-800 focus:ring-4 focus:outline-none focus:ring-indigo-300 mt-8">
                                        Voltar
                                    </div>
                                </a>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </main>
    </div>
    <footer class="bg-orange-500 shadow">
        <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
            <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8" />
            <span class="block text-base text-white text-center">Copyright © 2024 | Todos os direitos reservados -
                Brilho do Arco-Íris</span>
        </div>
    </footer>

    <script>
        // Define a função para limpar os campos
        function limparCampos() {
            document.getElementById('').value = '';
            document.getElementById('').value = '';
            document.getElementById('').value = '';
            document.getElementById('').value = '';
        }
        // Chama a função para limpar os campos quando a página é carregada
        window.onload = limparCampos;



        function formatarRegistro(e) {
            let valor = e.target.value.replace(/\D/g, '');

            valor = valor.replace(/^(\d{4})(\d{2})/, '$1-$2');

            e.target.value = valor;
        }

        // Adiciona um listener para chamar a função de formatação no evento 'input'
        document.getElementById('registro').addEventListener('input', formatarRegistro);



    </script>

    <script>
        // Função para permitir apenas letras em campos específicos
        function allowOnlyLetters(event) {
            var key = event.keyCode || event.which;
            key = String.fromCharCode(key);
            var regex = /[A-Za-zÀ-ú\s]/; // Apenas letras são permitidas
            if (!regex.test(key)) {
                event.preventDefault();
                return false;
            }
        }

    </script>

    
</body>

</html>